<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kstefancic.nekretnineinfo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/gfos_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/gfos_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginAndRegister.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >

        </activity>
        <activity
            android:name=".BuildingDataActivity"
            android:label="@string/title_activity_building_data"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".BuildingDetailsActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <service android:name=".helper.GetDataService"/>
    </application>

</manifest>