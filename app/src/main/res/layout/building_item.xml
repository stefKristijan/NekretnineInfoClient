<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buildingItem_cardView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    >


    <android.support.constraint.ConstraintLayout
        android:id="@+id/buildingItem_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/buildingItem_ivBuilding"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/nekretnine_logo" />

        <ImageButton
            android:id="@+id/buildingItem_ibPrevious"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buildingItem_tvDate"
            app:layout_constraintStart_toStartOf="@+id/buildingItem_ivBuilding"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@android:drawable/ic_media_previous"/>

        <ImageButton
            android:id="@+id/buildingItem_ibNext"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buildingItem_tvDate"
            app:layout_constraintEnd_toEndOf="@+id/buildingItem_ivBuilding"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@android:drawable/ic_media_next" />

        <TextView
            android:id="@+id/buildingItem_tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/cv_tv_not_sync"
            android:paddingStart="10dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@+id/buildingItem_ivBuilding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/buildingItem_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/buildingItem_tvAddressInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:text="@string/tvAddressInfo"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/buildingItem_tvStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buildingItem_tvAddressInfo"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:text="@string/tvStreet"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info" />

        <TextView
            android:id="@+id/buildingItem_tvStreetItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buildingItem_tvAddressInfo"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/buildingItem_tvStreet"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info" />

        <TextView
            android:id="@+id/buildingItem_tvStreetNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buildingItem_tvStreet"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:text="@string/tvStreetNumber"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info" />

        <TextView
            android:id="@+id/buildingItem_tvStreetNumItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buildingItem_tvStreet"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/buildingItem_tvStreetNumber"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info" />

        <TextView
            android:id="@+id/buildingItem_tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buildingItem_tvStreetNumber"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:text="@string/tvCity"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info" />

        <TextView
            android:id="@+id/buildingItem_tvCityItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buildingItem_tvStreetNumber"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/buildingItem_tvCity"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info" />

        <TextView
            android:id="@+id/buildingItem_tvCadastralParticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buildingItem_tvCity"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:text="@string/tvCadastralParticle"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info" />

        <TextView
            android:id="@+id/buildingItem_tvCadastralPartItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buildingItem_tvCity"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/buildingItem_tvCadastralParticle"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info" />


    </RelativeLayout>


</android.support.v7.widget.CardView>