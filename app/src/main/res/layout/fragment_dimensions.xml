<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayOpacity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/tvDimensions"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/frDims_btnNext"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_shape"
            android:drawableLeft="@drawable/ic_done_white_24dp"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:text="@string/btnAccept"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frDims_cbProperGroundPlan" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilLength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/frDims_tilResidentArea"
            app:layout_constraintEnd_toStartOf="@+id/frDims_tilWidth"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_chainStyle="packed">

            <EditText
                android:id="@+id/frDims_etLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="@string/etLengthHint"
                android:inputType="numberDecimal"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilWidth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/frDims_tilLength"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frDims_tilLength"
            app:layout_constraintTop_toTopOf="@+id/frDims_tilLength">

            <EditText
                android:id="@+id/frDims_etWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="@string/etWidthHint"
                android:inputType="numberDecimal"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilAtticArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/frDims_tilBasementArea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frDims_tilBasementArea"
            app:layout_constraintTop_toTopOf="@+id/frDims_tilBasementArea">

            <EditText
                android:id="@+id/frDims_etAtticArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:text="@string/zero"
                android:hint="@string/etAtticArea"
                android:inputType="numberDecimal"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilFullHeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/frDims_tvBrutoArea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frDims_tilFloorHeight"
            app:layout_constraintTop_toBottomOf="@+id/frDims_tilNumOfFloors">

            <EditText
                android:id="@+id/frDims_etFullHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="@string/etFullHeightHint"
                android:inputType="numberDecimal"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilFloorHeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/frDims_tilFullHeight"
            app:layout_constraintEnd_toStartOf="@+id/frDims_tilFullHeight"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frDims_tilFullHeight">

            <EditText
                android:id="@+id/frDims_etFloorHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="@string/etFloorHeightHint"
                android:inputType="numberDecimal"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilNumOfFloors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/frDims_tilFullHeight"
            app:layout_constraintEnd_toStartOf="@+id/frDims_tilNumOfFlats"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frDims_tilBasementArea">

            <EditText
                android:id="@+id/frDims_etNumOfFloors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:text="@string/one"
                android:hint="@string/etNumOfFloorsHint"
                android:inputType="numberDecimal"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilNumOfFlats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/frDims_tilNumOfFloors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frDims_tilNumOfFloors"
            app:layout_constraintTop_toTopOf="@+id/frDims_tilNumOfFloors">

            <EditText
                android:id="@+id/frDims_etNumOfFlats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="@string/etNumOfFlatsHint"
                android:inputType="number"
                android:padding="5dp" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/frDims_cbProperGroundPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/cbProperGroundPlan"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/frDims_btnNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frDims_tvBrutoArea" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilResidentArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/frDims_tilFloorArea"
            app:layout_constraintEnd_toStartOf="@+id/frDims_tilBusinessArea"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frDims_tilLength">

            <EditText
                android:id="@+id/frDims_etResidentialBA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="@string/etResidentialBAHint"
                android:inputType="numberDecimal"
                android:padding="5dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilBusinessArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/frDims_tilResidentArea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frDims_tilResidentArea"
            app:layout_constraintTop_toTopOf="@+id/frDims_tilResidentArea">

            <EditText
                android:id="@+id/frDims_etBusinessBA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="@string/etBusinessBAHint"
                android:inputType="numberDecimal"
                android:padding="5dp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilFloorArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/frDims_tvFloorArea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frDims_tilResidentArea">

            <EditText
                android:id="@+id/frDims_etFloorArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="@string/etFloorAreaHint"
                android:inputType="numberDecimal"
                android:padding="5dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/frDims_tilBasementArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/frDims_tilNumOfFloors"
            app:layout_constraintEnd_toStartOf="@+id/frDims_tilAtticArea"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frDims_tvFloorArea">

            <EditText
                android:id="@+id/frDims_etBasementBA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:text="@string/zero"
                android:hint="@string/etBasementBAHint"
                android:inputType="numberDecimal"
                android:padding="5dp" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/frDims_tvFloorArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/tvFloorArea"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/frDims_tilBasementArea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frDims_tilFloorArea" />

        <TextView
            android:id="@+id/frDims_tvBrutoArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/tvBrutoArea"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/frDims_cbProperGroundPlan"
            app:layout_constraintEnd_toStartOf="@+id/frDims_tvNetoArea"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frDims_tilFullHeight" />

        <TextView
            android:id="@+id/frDims_tvNetoArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:text="@string/tvNetoArea"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/frDims_tvBrutoArea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frDims_tvBrutoArea"
            app:layout_constraintTop_toTopOf="@+id/frDims_tvBrutoArea" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>